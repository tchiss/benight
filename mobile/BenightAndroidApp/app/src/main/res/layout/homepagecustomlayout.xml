<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f50a0534"
    android:weightSum="1">

    <com.parse.ParseImageView
        android:id="@+id/flyerHP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/usernameHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/flyerHP"
        android:layout_toRightOf="@id/flyerHP"
        android:text="Username"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EventTheme"
        android:textSize="18dp"
        android:textColor="#cccccccc"
        android:layout_below="@+id/usernameHP"
        android:layout_toRightOf="@id/flyerHP" />

    <TextView
        android:id="@+id/eventDateHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="Date"
        android:textSize="18dp"
        android:textColor="#cccccccc"
        android:layout_below="@+id/eventHP"
        android:layout_toRightOf="@id/flyerHP" />

    <TextView
        android:id="@+id/eventClubHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club"
        android:textSize="18dp"
        android:textColor="#cccccccc"
        android:layout_below="@+id/eventDateHP"
        android:layout_toRightOf="@id/flyerHP" />
    <Button
        android:id="@+id/bookHomepageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/flyerHP"
        android:layout_alignStart="@+id/flyerHP"
        android:layout_alignBottom="@+id/flyerHP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>