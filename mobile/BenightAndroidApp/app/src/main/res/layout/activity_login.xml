<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#f50a0534">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/logoBenightLogin"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom d'utilisateur"
        android:id="@+id/usernameLoginTextBox"
        android:textColor="#ffffffff"
        android:textColorHint="#ffafafaf"
        android:textColorHighlight="#ffffffff"
        android:layout_above="@+id/passwordLoginTextBox"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mot de passe"
        android:id="@+id/passwordLoginTextBox"
        android:textColorHint="#ffafafaf"
        android:textColorHighlight="#ffffffff"
        android:textColor="#ffffffff"
        android:layout_above="@+id/loginBtn"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:background="#17D086"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/forgotPasswordLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe Perdu"
        android:autoLink="all"
        android:gravity="center_horizontal"
        android:linksClickable="true"
        android:textColor="#ffffffff"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loginBtn"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/createAccountBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/forgotPasswordLink"
        android:layout_alignEnd="@+id/logoBenightLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"

        android:text="@string/com_facebook_loginview_log_in_button"
        android:textStyle="bold"
        android:background="@drawable/com_facebook_button_blue"
        android:drawableLeft="@drawable/com_facebook_inverse_icon"
        android:onClick="onLoginClick"
        android:id="@+id/loginfbBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp" />

</RelativeLayout>
