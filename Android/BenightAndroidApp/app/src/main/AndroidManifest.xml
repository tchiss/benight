<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.benight.benightandroidapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Benight"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="Benight" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomepageActivity"
            android:label="New Feeds" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" >
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <dependency>
            <groupId>com.facebook</groupId>
            <artifactId>android-sdk</artifactId>
            <version>version</version>
            <type>apklib</type>
        </dependency>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.PARSE_LOGIN_ENABLED"
            android:value="true"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.PARSE_LOGIN_EMAIL_AS_USERNAME"
            android:value="true"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.PARSE_LOGIN_HELP_TEXT"
            android:value="@string/password_reset_text"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.MIN_PASSWORD_LENGTH"
            android:value="8"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.FACEBOOK_LOGIN_ENABLED"
            android:value="true"/>
        <meta-data
            android:name="com.parse.ui.ParseLoginActivity.FACEBOOK_LOGIN_PERMISSIONS"
            android:resource="@array/my_facebook_permissions"/>
    </application>


</manifest>
